pipeline {
    agent any 
    stages {
        stage('Test stage') {
            steps {
                echo "${JOB_NAME}"
            }
        }
        stage('Return downstream info') {
            steps {
                echo "Jenkins URL is - ${JENKINS_URL}"
            }
        }
    }
    post {
        always { 
            print(${currentBuild.displayName})
            echo(${currentBuild.description})
        }
    }
}
